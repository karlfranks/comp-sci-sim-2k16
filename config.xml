<?xml version='1.0' encoding='utf-8'?>
<widget id="co.uk.karlfranks" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Comp Simulator</name>
    <description>
        Comp Sci Simulator 2016. A game for the Aberystwyth University Department of Computer Science,
        for use during events such as Open Days.
    </description>
    <author email="kpf@aber.ac.uk">
        Karl Franks
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
<icon src="www/img/logo.png" />
</widget>
